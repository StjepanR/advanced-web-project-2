    <form id="form" action="/second/unsafe" method="post" enctype="multipart/form-data">
        <p>Custom file:</p>
        <div class="custom-file mb-3">
            <input type="file" class="custom-file-input" for="file" name="file">
            <label class="custom-file-label" for="file" name="file">Choose file</label>
        </div>

        <div class="mt-3">
            <button type="submit" value="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>

    <script>
        $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>

</body>

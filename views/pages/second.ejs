<!DOCTYPE html>
<html>
<head>
    <%- include("../partials/header.ejs") %>
</head>
<body>
    <%- include("../partials/nav.ejs") %>

    <form id="form" action="/second" method="post" enctype="multipart/form-data">
        <p>Custom file:</p>
        <div class="custom-file mb-3">
            <input type="file" class="custom-file-input" for="file" name="file">
            <label class="custom-file-label" for="file" name="file">Choose file</label>
        </div>

        <div class="mt-3">
            <button type="submit" value="submit" class="btn btn-primary" onclick="toggle_security()">Submit</button>
        </div>
        <div class="container align-items-center centered" style="margin-top: 50px; justify-content: center">
            <% if(typeof result !== 'undefined') { %>
                <p aria-hidden="true">
                    <span class="placeholder col-6 border"><code><%= result %></code></span>
                </p>
            <%}; %>
        </div>
    </form>

    <script>
        $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>

</body>
</html>

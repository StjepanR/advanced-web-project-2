<!DOCTYPE html>
<html>
<head>
    <%- include("../partials/header.ejs") %>
</head>
<body>
    <%- include("../partials/nav.ejs") %>
    <div>
        <form id="form" class="form-inline" action="/first" method="post">
            <input class="form-control mr-sm-2" type="text" name="email" placeholder="E-mail" aria-label="email"></br>
            <input class="form-control mr-sm-2" type="password" name="password" placeholder="Password" aria-label="password"></br>
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit" onclick="toggle_security()">Login</button><br>
        </form>
    </div>
    <div class="container align-items-center">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>

                    <th scope="col">E-mail</th>
                    <th scope="col">Password</th>

                </tr>
            </thead>
            <tbody>
            <%if(typeof users !== 'undefined') { users.forEach(user => { %>
                <tr>

                    <td><%= user.email %></td>
                    <td><%= user.password %></td>
                </tr>
            <%})}%>
            </tbody>
        </table>
    </div>
</body>
</html>
